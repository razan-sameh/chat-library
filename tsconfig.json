{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Target/Module
    "target": "ES2017",            // safer for both web and RN
    "module": "ESNext",            // Rollup will handle module bundling
    "moduleResolution": "Node",    // Node resolution works better with rollup

    // React JSX
    "jsx": "react-jsx",

    // Types
    "types": ["react", "react-native"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type safety
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    // Isolation
    "isolatedModules": true
  },
  "include": ["src"]
}
